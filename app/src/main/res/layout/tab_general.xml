<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <View
                android:id="@+id/vDummyGeneral"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <EditText
                android:id="@+id/etTitle"
                style="@style/edit_text_title"
                android:hint="@string/detail_subtext_title_task"
                android:imeActionLabel="@string/done"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:inputType="textCapSentences"
                android:maxLength="35"
                />

            <View style="@style/divider_detail" />

            <LinearLayout
                android:id="@+id/llDateReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlDate"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddDate"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveDate"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveDate"
                        android:layout_toRightOf="@id/ivAddDate"
                        android:text="@string/detail_subtext_date" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddTime"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveTime"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveTime"
                        android:layout_toRightOf="@id/ivAddTime"
                        android:text="@string/detail_subtext_time" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddRepeat"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveRepeat"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvRepeat"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveRepeat"
                        android:layout_toRightOf="@id/ivAddRepeat"
                        android:text="@string/add_repeat" />
                </RelativeLayout>


                <View
                    android:id="@+id/vDividerTime"
                    style="@style/divider_detail" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:id="@+id/dividerReminder"
                style="@style/divider_detail"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rgPriority"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbNoPriority"
                        android:textSize="14sp"
                        android:layout_marginBottom="4dp"
                        android:text="@string/priority_none"
                        android:buttonTint="@color/colorSecondaryText"
                        android:textColor="@color/colorSecondaryText"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbHighPriority"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:textSize="14sp"
                        android:text="@string/priority_high"
                        android:buttonTint="@color/colorOrange"
                        android:textColor="@color/colorSecondaryText"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbVeryHighPriority"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp"
                        android:text="@string/priority_very_high"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorSecondaryText"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>