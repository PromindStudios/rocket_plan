<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/text_detail_title"
                android:text="@string/detail_title" />


            <View
                android:id="@+id/vDummyGeneral"
                android:layout_width="0dp"
                android:layout_height="0dp" />


            <EditText
                android:id="@+id/etTitle"
                style="@style/edit_text_title"
                android:hint="@string/detail_subtext_title_task"
                android:imeActionLabel="@string/done"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:inputType="textCapSentences"
                android:maxLength="35"
                />

            <View style="@style/divider_detail" />

            <LinearLayout
                android:id="@+id/llDateReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleDeadline"
                    style="@style/text_detail_title"
                    android:text="@string/detail_title_deadline" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddDate"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveDate"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvDate"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveDate"
                        android:layout_toRightOf="@id/ivAddDate"
                        android:text="@string/detail_subtext_date" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_margin_bottom">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddTime"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveTime"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvTime"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveTime"
                        android:layout_toRightOf="@id/ivAddTime"
                        android:text="@string/detail_subtext_time" />
                </RelativeLayout>


                <View
                    android:id="@+id/vDividerTime"
                    style="@style/divider_detail" />

                <TextView
                    android:id="@+id/tvTitleReminder"
                    style="@style/text_detail_title"
                    android:text="@string/detail_title_reminder"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!--
                <RelativeLayout
                    android:id="@+id/rlReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/detail_margin_bottom"
                    android:visibility="gone">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivAddReminder"
                        style="@style/image_view_detail_add" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/ivRemoveReminder"
                        style="@style/image_view_detail_remove" />

                    <TextView
                        android:id="@+id/tvReminder"
                        style="@style/text_detail_choose"
                        android:layout_toLeftOf="@id/ivRemoveReminder"
                        android:layout_toRightOf="@id/ivAddReminder"
                        android:text="@string/detail_subtext_reminder" />

                </RelativeLayout>

              -->

            </LinearLayout>

            <View
                android:id="@+id/dividerReminder"
                style="@style/divider_detail"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTitlePriority"
                style="@style/text_detail_title"
                android:text="@string/detail_title_priority" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/detail_margin_bottom">

                <android.support.v7.widget.AppCompatCheckBox
                    android:id="@+id/cbPriority"
                    style="@style/detail_checkBox" />

                <TextView
                    android:id="@+id/tvPriority"
                    style="@style/text_detail_subtext"
                    android:layout_toRightOf="@id/cbPriority"
                    android:text="@string/detail_subtext_priority" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>