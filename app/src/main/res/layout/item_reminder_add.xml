<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_reminder_height"
    android:id="@+id/rlAddReminder">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_18dp"
        android:tint="@color/colorDivider"
        android:paddingRight="16dp"
        android:id="@+id/ivAddReminder"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ivAddReminder"
        android:layout_centerVertical="true"
        android:text="@string/add_reminder"
        android:textSize="@dimen/text_size_detail_subtitle"
        android:textColor="@color/colorDivider"/>

</RelativeLayout>