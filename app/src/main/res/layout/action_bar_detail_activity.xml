<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:focusableInTouchMode="true">

    <View
        android:id="@+id/vDummy"
        android:layout_width="1px"
        android:layout_height="1px"
        android:focusableInTouchMode="true" />

    <ImageView
        android:id="@+id/ivSelectContentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="invisible"
        android:src="@drawable/ic_navigation_down_24dp" />

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/ivSelectContentType"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:buttonTint="@color/colorWhite"
            android:theme="@style/MyCheckBox"/>

        <EditText
            android:id="@+id/etTitle"
            style="@style/activity_detail_text"
            android:gravity="center_vertical"
            android:hint="@string/detail_subtext_title_task"
            android:imeActionLabel="@string/done"
            android:imeOptions="actionDone"
            android:inputType="textCapSentences"
            android:maxLength="35"
            android:maxLines="1"
            android:paddingBottom="@dimen/activity_detail_vertical_padding_header"
            android:paddingLeft="9dp"
            android:paddingTop="@dimen/activity_detail_vertical_padding_header"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llTitle"
        android:layout_marginBottom="@dimen/activity_detail_vertical_padding_header"
        android:layout_toLeftOf="@id/ivSelectContentType"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivContent"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_task" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aufgabe"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>