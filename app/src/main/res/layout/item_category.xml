<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_category_height"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlCategory"
        style="@style/relative_layout_category_item"
        android:layout_height="@dimen/item_category_title_height">

        <ImageView
            android:id="@+id/ivExpandCollapse"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@color/colorTransparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_expanded_24dp" />

        <TextView
            android:id="@+id/tvCategoryTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivExpandCollapse"
            android:gravity="center_vertical"
            android:text="Mobile-Box"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_size_item_title" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llCategoryContent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_category_content_total_height"
        android:layout_below="@id/rlCategory"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="18dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_task_24dp" />

        <TextView
            android:id="@+id/tvTask"
            style="@style/text_view_category_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:text="6" />

        <View
            android:layout_width="1px"
            android:layout_height="24dp"
            android:background="@color/colorDivider" />

        <ImageView
            android:id="@+id/ivEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:paddingBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_flag_24dp" />

        <TextView
            android:id="@+id/tvEvent"
            style="@style/text_view_category_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingRight="24dp"
            android:paddingTop="4dp"
            android:text="6" />

        <View
            android:layout_width="1px"
            android:layout_height="24dp"
            android:background="@color/colorDivider" />

        <ImageView
            android:id="@+id/ivNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:paddingBottom="4dp"
            android:paddingLeft="24dp"
            android:paddingTop="4dp"
            android:src="@drawable/ic_note_24dp" />

        <TextView
            android:id="@+id/tvNote"
            style="@style/text_view_category_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="6" />

    </LinearLayout>

    <View
        android:id="@+id/vDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorDivider"
        android:visibility="gone" />

</RelativeLayout>