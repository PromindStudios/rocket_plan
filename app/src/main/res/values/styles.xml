<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorHighLight</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/colorDivider</item>
        <item name="android:colorForeground">@android:color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorTransparent</item>
        <item name="actionModeBackground">@color/colorTransparent</item>
    </style>

    <!-- Action Mode Style -->
    <style name="MyTheme.ActionMode" parent="@android:style/Theme.Holo.Light">


    </style>

    <!-- Fab Style -->
    <style name="fab_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- CheckBox -->
    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!-- TextView -->

    <style name="text_detail_subtasks_add">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/colorDivider</item>
        <item name="android:text">@string/detail_subtask_add</item>
        <item name="android:textSize">@dimen/text_size_detail_subtitle</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Edit Texts -->

    <style name="edit_text_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:hint">"Enter a text"</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorDivider</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <!-- Dialogs -->

    <style name="linearLayout_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_view_dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">"Dialog Title"</item>
    </style>

    <style name="text_view_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:text">"Information will be displayed here"</item>
    </style>

    <style name="image_button_dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_done_green</item>
    </style>

    <!-- Calendar elements -->

    <style name="relative_layout_calendar_day">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="linear_layout_horizontal_calendar_day">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:weightSum">7</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="view_circle_big_calendar_day">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/circle_solid_primary_color</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="text_view_calendar_day">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="view_circle_small_calendar_day">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@drawable/circle_solid_primary_color</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="text_view_week_day">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Calendar dialog -->
    <style name="text_view_dialog_calendar_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/calendar_dialog_item_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- App Widget -->
    <style name="text_view_app_widget_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="view_app_widget_tab_indicator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Activity Detail -->

    <style name="activity_detail_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHint">@color/colorDivider</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/activity_detail_margin_vertical_default</item>
        <item name="android:paddingBottom">@dimen/activity_detail_margin_vertical_default</item>
    </style>

    <style name="activity_detail_text_choose" parent="activity_detail_text">
        <item name="android:textColor">@color/colorDivider</item>

    </style>

    <style name="activity_detail_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">@dimen/activity_detail_margin_vertical_default</item>
        <item name="android:paddingBottom">@dimen/activity_detail_margin_vertical_default</item>
        <item name="android:layout_centerVertical">true</item>

    </style>

    <style name="activity_detail_image_view_add" parent="activity_detail_image_view">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:src">@drawable/ic_add_18dp</item>
    </style>

    <style name="activity_detail_image_view_icon" parent="activity_detail_image_view">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="activity_detail_image_view_remove" parent="activity_detail_image_view">
        <item name="android:src">@drawable/ic_remove_18dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:tint">@color/colorDivider</item>
    </style>

    <style name="activity_detail_divider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginBottom">@dimen/activity_detail_margin_vertical_default
        </item>
        <item name="android:layout_marginTop">@dimen/activity_detail_margin_vertical_default</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <!-- Navigation Drawer -->

    <style name="navigation_drawer_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">@dimen/navigation_drawer_margin_vertical_default</item>
        <item name="android:paddingBottom">@dimen/navigation_drawer_margin_vertical_default</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="navigation_drawer_image_view_icon" parent="navigation_drawer_image_view">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="navigation_drawer_image_view_right" parent="navigation_drawer_image_view">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="navigation_drawer_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/navigation_drawer_margin_vertical_default</item>
        <item name="android:paddingBottom">@dimen/navigation_drawer_margin_vertical_default</item>
    </style>

    <style name="navigation_drawer_text_view_subtext" parent="navigation_drawer_text_view">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="navigation_drawer_view_divider_short" parent="view_divider">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">@dimen/navigation_drawer_margin_vertical_small</item>
        <item name="android:layout_marginBottom">@dimen/navigation_drawer_margin_vertical_small</item>
    </style>

    <style name="navigation_drawer_view_divider_long" parent="view_divider">
        <item name="android:layout_marginTop">@dimen/navigation_drawer_margin_vertical_default</item>
        <item name="android:layout_marginBottom">@dimen/navigation_drawer_margin_vertical_default</item>
    </style>


    <!-- Content Item -->

    <style name="content_item_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:paddingTop">@dimen/content_item_margin_vertical_big</item>
        <item name="android:paddingBottom">@dimen/content_item_margin_vertical_big</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="content_item_image_view_left" parent="content_item_image_view">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="content_item_image_view_detail" parent="content_item_image_view">
        <item name="android:tint">@color/colorSecondaryText</item>
    </style>


    <!-- General -->

    <style name="view_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="dialoge_image_view_ok">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_done_green</item>
    </style>

    <style name="dialoge_image_view_next">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_next_18dp</item>
        <item name="android:tint">@color/colorOrange</item>
    </style>

    <style name="dialoge_image_view_exit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:src">@drawable/ic_content_clear</item>
    </style>

    <!-- Introduction Dialoge -->

    <style name="introduction_dialoge_text_view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/introduction_dialoge_text_size_title</item>
        <item name="android:text">@string/introduction_help</item>
    </style>

    <style name="introduction_dialoge_text_view_subtitle" parent="introduction_dialoge_text_view_title">
        <item name="android:textSize">@dimen/introduction_dialoge_text_size_subtitle</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="introduction_dialoge_text_view_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">@dimen/introduction_dialoge_text_size_content</item>
    </style>

    <style name="introduction_dialoge_text_view_content_title" parent="introduction_dialoge_text_view_content">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="introduction_dialoge_image_view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/introduction_dialoge_layout_margin_default</item>
        <item name="android:src">@drawable/ic_lightbulb_24dp</item>
    </style>

    <style name="introduction_dialoge_image_view_screenshot">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginRight">@dimen/introduction_dialoge_layout_margin_default</item>
    </style>

    <style name="introduction_dialoge_image_view_action">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_done_green</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:layout_marginTop">@dimen/introduction_dialoge_layout_margin_default</item>
        <item name="android:layout_marginBottom">@dimen/introduction_dialoge_layout_margin_default</item>
    </style>

    <!-- Donate Fragment -->
    <style name="donate_fragment_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">@dimen/fragment_donate_margin_default</item>
        <item name="android:layout_marginBottom">@dimen/fragment_donate_margin_default</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
